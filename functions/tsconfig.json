{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "compileOnSave": true,
  "include": ["src/**/*", "tests/**/*", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
